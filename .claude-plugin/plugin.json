{
  "name": "aureus",
  "version": "0.8.0",
  "description": "Aureus - Advanced Git automation with Versioned Release Convention (RELEASE/UPDATE/PATCH), smart releases, amend workflow, and conflict resolution",
  "author": {
    "name": "oalacea"
  },
  "repository": "https://github.com/Pamacea/aureus",
  "license": "MIT",
  "keywords": ["aureus", "git", "automation", "versioned-release", "semantic-versioning", "release", "merge-conflict"],
  "skills": "./plugins/aureus/skills/",
  "commands": "./plugins/aureus/skills/",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/start-background.js start",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/aureus/hooks/session-start-hook.js",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/aureus/hooks/pre-git-check.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/aureus/hooks/post-git-operation.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/start-background.js stop",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
